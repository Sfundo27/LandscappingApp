@model IEnumerable<AgricultureApp.Models.Appointment.Fumigation>

@{
	ViewBag.Title = "DeliveryNote";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var mess = TempData["DeliveryNote"] ?? null;
}
<script>
	var msg = '@mess'
	if (msg)
		alert(msg)
</script>

<style>
	.delivery-note {
		font-family: Arial, sans-serif;
		font-size: 16px;
		margin: 20px 0;
	}

		.delivery-note h2 {
			font-size: 28px;
			font-weight: bold;
			margin-bottom: 10px;
			text-align: center;
		}

		.delivery-note p {
			margin: 10px 0;
			text-align: center;
		}

			.delivery-note p strong {
				font-weight: bold;
			}

		.delivery-note img {
			max-width: 300px;
			max-height: 300px;
			margin: 20px auto auto auto;
			text-align: center;
		}
</style>
<div class="delivery-note" id="delivery-note">
	<img src="~/Images/logo.jpg" style="border:1px solid black; width:100px; height:100px;margin:0 auto;" />
	<h2>Servce Delivery Note</h2>
	<hr />
	@foreach (var item in Model)
	{
		<center>
			<p>
				<strong>Fumigation Service:</strong> @item.FumService <br /><br />
				<strong>Treatment:</strong> @item.Treatment <br /><br />
				@if (item.FumService == "Outdoor")
				{
						<div>
							<strong>Price:</strong> @item.price.ToString("R0.00")/ &nbsp;㎡ <br /><br />
							<strong>Width:</strong>  @item.width m<br /><br />
							<strong>Length:</strong> @item.length m<br /><br />
						</div>
				}
				else
				{
					<div>
						<strong>Price:</strong> @item.price.ToString("R0.00")/Room <br /><br />
						<strong>Rooms:</strong>  @item.NumberOfRooms rooms<br /><br />
					</div>
				}
				<strong>Total:</strong> @item.Total.ToString("R0.00") <br /><br />
			</p>
		</center>
	}
	<hr />
	<hr />
	@foreach (var item in Model)
	{
		<p style="text-align: center;"><strong>Customer Signature:</strong></p>
		<img src="data:image/png;base64,@Convert.ToBase64String(item.signauture, 0, item.signauture.Length)" style="width: 200px; height: 100px; border-bottom: 5px solid black; display: block; margin: 0 auto;" alt="" />
	}
</div>

