@model IEnumerable<AgricultureApp.Models.Appointment.FumService>

@{
    ViewBag.Title = "PickIndex";
}
<style>
	.service-card {
		width: 300px;
		height: 400px;
		background-color: #8BC34A;
		border-radius: 10px;
		box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
		padding: 2%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		text-align: center;
		transition: box-shadow 0.3s ease-out;
	}

		.service-card:hover {
			box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.25);
		}

	.service-name {
		font-size: 24px;
		font-weight: bold;
		margin-bottom: 10px;
	}

	.service-description {
		font-size: 18px;
		margin: 0;
	}

</style>
<center><h2>Pick Service Type</h2></center>
<hr />

<div style="display:flex; justify-content:space-evenly; align-items:center">

	@foreach (var item in Model)
	{
		<div class="service-card">
			<h3 class="service-name">@item.service</h3>
			<hr />
			<p class="service-description">@item.descr</p>
			<hr />
			<a class="btn btn-warning" href="~/FumTreatments/PickIndex/@item.Id?bookingId=@ViewBag.BookingId"> Pick Service </a>
		</div>

	}

</div>