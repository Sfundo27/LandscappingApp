@{
	ViewBag.Title = "Home Page";
}

<style>
	.card {
		width: 300px;
		height: 400px;
		margin: 0 auto;
		border-radius: 10px;
		overflow: hidden;
		position: relative;
		background-color: #8BC34A;
		box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
		transition: transform 0.3s ease-out;
	}

		.card:hover {
			transform: translateY(-20px);
		}

	.card-link {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100%;
		width: 100%;
		text-decoration: none;
	}

	.card-image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-size: cover;
		background-position: center;
	}

	.shop-now {
		background-image: url('../../images/sprayer gardening.jpg');
	}

	.appointments {
		background-image: url('../../images/fum.jpg');
	}

	.card-title {
		color: #fff;
		font-size: 25px;
		font-weight: bold;
		margin-top: 20px;
		text-align: center;
		text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.5);
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		z-index: 1;
		text-transform: uppercase;
		color: #8BC34A
	}

	.disp {
		display: flex;
		justify-content: space-evenly;
		align-items: center;
		margin: 20% auto auto auto;
	}
</style>
<div style="background-color: #8BC34A; padding: 20px;">
	<h2 style="color: #FFFFFF; text-align: center; font-family: Arial, sans-serif; text-transform:uppercase">Welcome To Plantation Management</h2>
</div>

<div class="disp">
	<div class="card">
		<a href="~/Carts/Shop" class="card-link">
			<div class="card-image shop-now"></div>
			<div class="card-title">Shop Now</div>
		</a>
	</div>
	<div class="card">
		<a href="~/Bookings/Create" class="card-link">
			<div class="card-image appointments"></div>
			<div class="card-title">Appointments</div>
		</a>
	</div>

</div>
